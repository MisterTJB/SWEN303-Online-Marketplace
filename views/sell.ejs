<!DOCTYPE html>
<html>

<head>
  <title>Sell an Item</title>
  <% include ../views/templates/head %>
  <link rel='stylesheet' href='/stylesheets/sell.css' />
  <script src="/javascript/sell-handler.js"></script>
</head>

<body>

  <% include ../views/templates/basic-header %>
  <script src="/javascript/sell-tree-handler.js"></script>
  <script src="/javascript/bootstrap-treeview.js"></script>
    

    <div class="container">
      <div class="well">
        <!-- Header -->
        <div class="page-header">
          <h1 id="navbar" style="text-align:center;">Create A New Listing</h1>
        </div>
        <form class="form-horizontal" method="POST", action="/sell">
          <fieldset>

            <!--Upload-->
            <div class="form-group">
              <label id="form-labels" for="inputTitle" class="col-lg-2 control-label">Upload Images</label>
              <div class="col-lg-9">
                <div class="input-group image-preview">
                  <input type="text" class="form-control image-preview-filename" >
                  <span class="input-group-btn">
                    <!-- image-preview-clear button -->
                    <button type="button" class="btn btn-default image-preview-clear" style="display:none;">
                     <span class="glyphicon glyphicon-remove"></span> Clear
                  </button>
                  <!-- image-preview-input -->
                  <div class="btn btn-default image-preview-input">
                    <span class="glyphicon glyphicon-folder-open"></span>
                    <span class="image-preview-input-title">Browse</span>
                    <input type="file" accept="image/png, image/jpeg, image/gif" name="input-file-preview" />
                    <!-- rename it -->
                  </div>
                  </span>
                </div>
              </div>
            </div>

            <!-- Product title -->
            <div class="form-group">
              <label id="form-labels" for="inputTitle" class="col-lg-2 control-label">Title</label>
              <div class="col-lg-9">
                <input type="text" name='title' class="form-control" id="inputTitle" placeholder="Product title">
              </div>
            </div>

            <!-- Full description -->
            <div class="form-group">
              <label for="fullDesc" id="form-labels" class="col-lg-2 control-label">Full descripton</label>
              <div class="col-lg-9">
                <textarea class="form-control" rows="3" name="description" id="fullDesc" placeholder="Please enter a description describing your product."></textarea>
                <div class="checkbox">
                  <label id="form-labels">
            <input type="checkbox"> New
          </label>
                </div>
              </div>
            </div>

            <!-- Price -->
            <div class="form-group">
              <label for="Price" id="form-labels" class="col-lg-2 control-label">Price $</label>
              <div class="col-lg-2">
                <input type="text" name="price" placeholder="$0.00" class="form-control">
              </div>
            </div>

            <!-- Category -->
            <div class="form-group">
              <label for="select" id="form-labels" class="col-lg-2 control-label">Category</label>
              <div class="col-lg-9">
                <input type="hidden" name="category" id="category" value="">
                <div id="tree"></div>
              </div>
            </div>


            <!-- Buttons -->
            <div class="form-group">
              <div class="col-lg-10 col-lg-offset-2">
                <a type="reset" class="btn btn-default" id="cancelButton" href="/">Cancel</a>
                <button type="submit" class="btn btn-primary">List Item</button>
                <input type="hidden" name="username" id="usernameField" value="">
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>

</body>

</html>