<!DOCTYPE html>
<html>
  <head>
    <title>Register</title>
<% include ../views/templates/head %>
<link rel='stylesheet' href='/stylesheets/login.css' />
    <script src="/javascript/registration-handler.js"></script>
  </head>
  <body>


  <div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <a href="../" class="navbar-brand">Marketplace</a>
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="navbar-collapse collapse" id="navbar-main">
        <ul class="nav navbar-nav">

          <li>
            <a href="">Home</a>
          </li>

          <li>
            <a href="">Help</a>
          </li>

        </ul>
      </div>
    </div>
  </div>

  <!-- Well around the login and register form -->
  <div class="container" id="login-con">
    <!-- Register -->
    <div id="register">
      <form class="form-horizontal" method="post" action="/register">
        <legend style="text-align:center">Register An Account</legend>

        <!-- Name Input Register -->
        <div class="form-group">
          <label for="inputName" class="col-lg-2 control-label" id="labels">Name</label>
          <div class="col-lg-10">
            <input type="text" name="name" class="form-control" id="inputName" placeholder="Name">
          </div>
        </div>

        <!-- Username Input Register -->
        <div class="form-group">
          <label for="inputUsername" class="col-lg-2 control-label" id="labels">Username</label>
          <div class="col-lg-10">
            <input type="text" name="username" class="form-control" id="inputUsername" placeholder="Username" onchange="checkUsername()">
          </div>
        </div>

        <!-- Password Input Register-->
        <div class="form-group">
          <label for="inputPassword" class="col-lg-2 control-label" id="labels">Password</label>
          <div class="col-lg-10">
            <input type="password" name="password" class="form-control" id="inputPassword" placeholder="Password" required>
          </div>
        </div>

        <!-- Confirm Password Input Register-->
        <div class="form-group">
          <label for="inputPassword" class="col-lg-2 control-label" id="labels">Confirm</label>
          <div class="col-lg-10">
            <input type="password" name="passwordVerify" class="form-control" id="inputPasswordVerify" placeholder="Verify Password" onkeyup="checkPassword()" required>
          </div>
        </div>

        <!-- Register Button -->
        <div class="form-group">
          <div class="col-lg-12 col-lg" id="button-holder">
            <button type="submit" class="btn btn-primary" id="register-button" disabled>Register</button>
          </div>
        </div>
      </form>
    </div>
  </div>
  </body>
</html>

