<!DOCTYPE html>
<html>
  <head>
    <title>Home</title>
    <% include ../views/templates/head %>
    
  </head>
  <body>
  
  <% include ../views/templates/header %>

  <div class="container">
	<div class="bs-docs-section clearfix">
    <!-- <h2 id="data-test">Categories</h3> -->
    <div class="well">
          <div class="row" id="category-row">
         <!-- <div class="col-lg-12"> -->


                    <%

                        var partitionedCategories = [];
                        for(var i = 0; i < categories.length; i++) {
                            // Where 4 equals the number of categories in each column
                            if(i % 4 === 0){
                                partitionedCategories.push([]);
                            }
                            partitionedCategories[partitionedCategories.length - 1].push(categories[i]);
                        }
                        partitionedCategories.forEach(function(partition){

                    %>
                            <div class="col-lg-4">
                                <ul class="list-group row">
                                    <% partition.forEach(function(category){ %>
                                        <li class="list-group-item "><a class="category-link"><%= category.replace("_", " "); %></a></li>
                                    <% });%>
                              </ul>

                            </div>
                        <% });%>

                </div>
           </div>
         </div>


        <!-- Div for adding results before -->
         <div class="row" id="resultDiv0">
   	     <div class="col-lg-12">
           </div>
         </div>
      </div>
</div>
  </body>
</html>
