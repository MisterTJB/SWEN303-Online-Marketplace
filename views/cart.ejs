<!DOCTYPE html>
<html>
  <head>
    <title>Home</title>
    <% include ../views/templates/head %>
    <link rel='stylesheet' href='/stylesheets/cart.css' />
    <script src="/javascript/cart-handler.js"></script>
  </head>
  <body>
  
  <% include ../views/templates/header %>
  
  <div class="container">
    <div class="well">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1" id="cartDiv">
            <table class="table table-hover" id="cart-table">
                <thead>
                    <tr>
                        <th><h4>Product</h4></th>
                        <th class="text-center"><h4>Price</h4></th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody>


                    <tr>
                        <td>   </td>
                        <td><h3>Total To Pay</h3></td>
                        <td class="text-left"><h3 id="totalCost"><strong ></strong></h3></td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>
                        <a type="button" href="/" class="btn btn-primary">Continue Shopping</a></td>
                        <td>
                        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal">
                            Pay Now <span class="glyphicon glyphicon-play"></span>
                        </button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    </div>
  </div>
  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
          <div class="modal-content">
              <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title" id="myModalLabel">Pay Now</h4>
              </div>
              <div class="modal-body">
                  <% include ../views/payment.ejs%>

              </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                  <button type="button" class="btn btn-success" data-dismiss="modal" onclick="paid()">Pay</button>
              </div>
          </div>
      </div>
  </div>
  </body>


</html>
